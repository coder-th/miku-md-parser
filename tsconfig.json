/*  tsconfig.json */
{
  "compilerOptions": {
    /* 基础配置 */
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "removeComments": false,
    "declaration": true,
    "sourceMap": true,

    /* 强类型检查配置 */
    "strict": true,
    "noImplicitAny": false,

    /* 模块分析配置 */
    "outDir": "./dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./"
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts", "src/types/**/*.ts"]
}
